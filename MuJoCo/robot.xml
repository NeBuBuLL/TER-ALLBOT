<mujoco model="quadruped">

  <visual>
    <rgba rangefinder="1 1 0.1 0.1"/>
    <map znear=".005" zfar="20"/>
  </visual>

  <asset>

    <hfield name="terrain" ncol="201" nrow="201" size="30 30 5 .1"/>

    <!--load the main body part of the robot-->
    <mesh name="torso" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\torso.stl"/>

    <!--load the first leg of the robot-->
    <mesh name="FL_leg" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\FL_Leg.stl"/>
    <mesh name="FL_foot" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\FL_Foot.stl"/>
    

    <!--load the second leg of the robot-->
    <mesh name="FR_leg" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\FR_Leg.stl"/>
    <mesh name="FR_foot" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\FR_Foot.stl"/>

    <!--load the third leg of the robot-->
    <mesh name="BL_leg" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\BL_Leg.stl"/>
    <mesh name="BL_foot" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\BL_Foot.stl"/>
    
    <!--load the fourth leg of the robot-->
    <mesh name="BR_leg" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\BR_Leg.stl"/>
    <mesh name="BR_foot" scale="0.05 0.05 0.05" file="C:\Users\nebub\Documents\git\TER-ALLBOT\modele3D\BR_Foot.stl"/>

  </asset>

  <option timestep=".005"/>

  <default>
    <geom solimp=".9 .99 .003" solref=".01 1"/>
    <default class="body">
      <geom  type="capsule" size=".08" condim="1" density="500"/>
      <joint type="hinge" damping="30" armature=".01"
             limited="true" solimplimit="0 .99 .01"/>
      <default class="hip">
        <default class="yaw">
          <joint axis="0 0 1" range="-50 50"/>
        </default>
        <default class="pitch">
          <joint axis="0 1 0" range="-20 60"/>
        </default>
        <geom type="box" size=".3 .2 .42" pos="0 0 0.3"/>
      </default>
      <default class="knee">
        <joint axis="0 1 0" range="-60 50"/>
        <geom type="box" size=".37 .42 .2"/>
      </default>
      <default class="ankle">
        <joint axis="0 1 0" range="-45 55"/>
        <geom type="box" size=".37 .42 .2"/>
      </default>
      <default class="toe">
        <geom type="sphere" size=".08" friction="1.5"/>
        <site type="sphere" size=".084"  group="4"/>
      </default>
    </default>
    <default class="rangefinder">
      <site type="capsule" size=".005 .1" group="4"/>
    </default>
    <default class="wall">
      <geom type="plane"/>
    </default>

    <default class="coupling">
      <equality solimp="0.95 0.99 0.01" solref=".005 .5"/>
    </default>

    <general ctrllimited="true" gainprm="1000" biasprm="0 -1000" biastype="affine" dyntype="filter" dynprm=".1"/>
    <default class="yaw_act">
      <general ctrlrange="-1 1"/>
    </default>
    <default class="lift_act">
      <general ctrlrange="-1 1.1"/>
    </default>
    <default class="extend_act">
      <general ctrlrange="-.8 .8"/>
    </default>
  </default>


  <worldbody>
    <light name="light" pos="0 0 100" mode="trackcom"/>
    <geom name="floor" type="plane" size="15 15 .5"/>
    <geom name="terrain" type="hfield" hfield="terrain" rgba=".2 .3 .4 1" pos="0 0 -.01"/>-->
  
    <!--=======================================================================================
                                    DISPLAY MESHES
        =======================================================================================-->

    <!--body -->
    <body>
        <joint name="torso" type="hinge" axis="1 0 0"/>
        <geom type="mesh" mesh="torso"/>
        <!--FR leg-->
        <body>
            <joint name="hip_fr_leg" type="hinge" axis="1 0 0"/>
            <geom type="mesh" mesh="FR_leg"/>
            <body>
                <joint name="hip_fr_foot" type="hinge" axis="1 0 0"/>
                <geom type="mesh" mesh="FR_foot"/>
            </body>
        </body>
        <!--FL leg-->
        <body>
            <joint name="hip_fl_leg" type="hinge" axis="1 0 0"/>
            <geom type="mesh" mesh="FL_leg"/>
            <body>
                <joint name="hip_fl_foot" type="hinge" axis="1 0 0"/>
                <geom type="mesh" mesh="FL_foot"/>
            </body>
        </body>
        <!--BR leg-->
        <body>
            <joint name="hip_br_leg" type="hinge" axis="1 0 0"/>
            <geom type="mesh" mesh="BR_leg"/>
            <body>
                <joint name="hip_br_foot" type="hinge" axis="1 0 0"/>
                <geom type="mesh" mesh="BR_foot"/>
            </body>
        </body>
        <!--BL leg-->
        <body>
            <joint name="hip_bl_leg" type="hinge" axis="1 0 0"/>
            <geom type="mesh" mesh="BL_leg"/>
            <body>
                <joint name="hip_bl_foot" type="hinge" axis="1 0 0"/>
                <geom type="mesh" mesh="BL_foot"/>
            </body>
        </body>
    </body>

    <camera name="global"  pos="-10 10 10" xyaxes="-1 -1 0 1 0 1" mode="trackcom"/>
    


  </worldbody>

  <tendon>
    <fixed name="coupling_front_left">
        <joint joint="torso"            coef=".333"/>
        <joint joint="hip_fl_leg"       coef=".333"/>
        <joint joint="hip_fl_foot"      coef=".333"/>
    </fixed>

    <fixed name="coupling_front_right">
        <joint joint="torso"            coef=".333"/>
        <joint joint="hip_fr_leg"       coef=".333"/>
        <joint joint="hip_fr_foot"      coef=".333"/>
    </fixed>

    <fixed name="coupling_back_left">
        <joint joint="torso"            coef=".333"/>
        <joint joint="hip_bl_leg"       coef=".333"/>
        <joint joint="hip_bl_foot"      coef=".333"/>
    </fixed>

    <fixed name="coupling_back_right">
        <joint joint="torso"            coef=".333"/>
        <joint joint="hip_br_leg"       coef=".333"/>
        <joint joint="hip_br_foot"      coef=".333"/>
    </fixed>
  </tendon>

  <equality>
  </equality>

  <actuator>
  </actuator>

  <sensor>
  </sensor>


</mujoco>

